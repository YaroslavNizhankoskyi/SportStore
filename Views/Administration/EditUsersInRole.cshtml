@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    ViewBag.Title = "Поменять пользователей";
}

<form method="post">
    <div class="card mb-3">
        <div class="card-header">
            <h2>Добавьте или удалите пользователей</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" style="margin:0 0 0 15px" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" style="width:auto" />
            <a asp-action="EditUsersInRole" asp-route-id="@roleId" asp-controller="Administration"
               style="width:auto" class="btn btn-primary">Сохранить</a>
        </div>
    </div>

</form>