@model EditRoleViewModel

@{
    ViewBag.Title = "Изменить роль";
}

<h1>Изменить роль</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Название</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span class="text-danger" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">Обновить</button>
            <a class="btn btn-danger" asp-action="ListRoles" asp-controller="Administration"> Обратно</a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <h3>Пользователи в этой роли</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Пока нету</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="administration"
               asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Добавить или убрать пользователей</a>
        </div>
    </div>
</form>