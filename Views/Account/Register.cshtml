 @model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<body id="body-auth">
    <div class="row" style="margin:40px 0px 0px 0px">
        <h3 style="right:40%; left:30%; position:relative">
            Введите данные о себе, чтобы войти на свою страницу:
        </h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post">
        <div class="" style="margin:5% 30% 20% 35%">


            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" title="Ваше имя" placeholder="Имя" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Имя</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Кирилл Селезнёв" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="City" class="col-sm-2 col-form-label">Город</label>
                <div class="col-sm-10">
                    <input asp-for="City" class="form-control" placeholder="Харьков" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-6 col-form-label">Ваш пароль</label>

                <div class="col-sm-6">
                    <input asp-for="Password" id="password" data-toggle="password" class="form-control" title="Ваш пароль" placeholder="12345JQUery*" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="12345JQUery*" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">


                <label asp-for="Role" class="col-sm-6 col-form-label">Роль</label>
                <div class="col-sm-6">
                    <select asp-for="Role" asp-items="@ViewBag.Roles" class="form-control text-lg-left"></select>              
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>

            <div class="form-inline">
                <button type="submit" class="btn btn-outline-primary btn-lg"
                        style="margin-top:20px ;background-color: white !important;">

                    Зарегистрироваться
                </button>
            </div>

        </div>
    </form>
</body>


@section  Scripts {

    <script type="text/javascript">

        $("#password").password('toggle');

    </script>

}

