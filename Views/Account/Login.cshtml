@model LoginViewModel

@{
    ViewBag.Title = "Login";
}
<body id="body-auth">
    <div class="row" style="margin:40px 0px 0px 0px">
        <h3 style="right:40%; left:30%; position:relative">
            Введите данные о себе, чтобы войти на свою страницу:
        </h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Login" method="post">
        <div class="" style="margin:5% 30% 20% 35%">


            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <!--<label asp-for="UserName" style="margin:10px" class="col-sm-2 col-form-label">Имя</label>-->
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" title="Почта" placeholder="email.mail@mail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <!--<label asp-for="Password" style="margin:10px"class="col-sm-2 col-form-label">Пароль</label>-->
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" title="Ваш пароль" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div >
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label" style="margin-left:12px " asp-for="RememberMe">
                        Запомнить меня
                    </label>
                </div>
            </div>

            <div class="form-inline" style="margin-top:20px">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" style="background-color: white !important;"
                                title="Войти в систему" 
                                class="btn btn-lg btn-outline-primary">Войти</button>
                    </div>
                </div>
                <a  class="btn btn-lg btn-outline-secondary" 
                        style="background-color: white !important;"asp-action="Register" asp-controller="Account">
                   Зарегестрироваться
                </a>
            </div>

        </div>
    </form>
</body>
